# Configuration Apache pour endpoint PHP
# Si vous utilisez Apache, cette configuration permet d'appeler /api/orders/snapshot

RewriteEngine On

# Rediriger /api/orders/snapshot vers api/orders/snapshot.php
RewriteRule ^api/orders/snapshot$ api/orders/snapshot.php [L]

# Servir les fichiers statiques normalement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Pour SPA : rediriger toutes les routes non-fichiers vers index.html
RewriteRule ^(?!api/).*$ index.html [L]
